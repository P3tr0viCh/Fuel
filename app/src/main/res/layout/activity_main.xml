    android:layout_height="match_parent"
    tools:context=".ActivityMain"
    tools:menu="menu_main">

    <include
        android:id="@+id/toolbarMain"
        layout="@layout/toolbar" />

    <fragment
        android:id="@+id/fragmentFueling"
