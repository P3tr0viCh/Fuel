<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.p3tr0vich.fuel.ActivityCalc">

    <include
        android:id="@+id/toolbarCalc"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_record_horizontal_margin"
        android:paddingRight="@dimen/activity_calc_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/textDistance"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:labelFor="@+id/editDistance"
            android:text="@string/text_distance"
            android:textAppearance="@style/TextStyleForTexts" />

        <EditText
            android:id="@+id/editDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:selectAllOnFocus="false"
            android:textAppearance="@style/TextStyleForTexts" />
    </LinearLayout>

    <Button
        android:id="@+id/btnMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_record_horizontal_margin"
        android:layout_marginRight="@dimen/activity_record_horizontal_margin"
        android:text="@string/btn_calc_map" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_calc_horizontal_margin"
        android:paddingRight="@dimen/activity_calc_horizontal_margin">

        <TextView
            android:id="@+id/textCost"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:labelFor="@+id/editCost"
            android:text="@string/text_cost"
            android:textAppearance="@style/TextStyleForTexts" />

        <EditText
            android:id="@+id/editCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="false"
            android:textAppearance="@style/TextStyleForTexts" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_calc_horizontal_margin"
        android:paddingRight="@dimen/activity_calc_horizontal_margin">

        <TextView
            android:id="@+id/textVolume"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:labelFor="@+id/editVolume"
            android:text="@string/text_volume"
            android:textAppearance="@style/TextStyleForTexts" />

        <EditText
            android:id="@+id/editVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="false"
            android:textAppearance="@style/TextStyleForTexts" />
    </LinearLayout>

    <View
        android:id="@+id/divider1"
        style="@style/AppTheme.Divider.Horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/activity_calc_horizontal_margin"
        android:layout_marginRight="@dimen/activity_calc_horizontal_margin"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_calc_horizontal_margin"
        android:paddingRight="@dimen/activity_calc_horizontal_margin">

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:labelFor="@+id/editPrice"
            android:text="@string/text_price"
            android:textAppearance="@style/TextStyleForTexts" />

        <EditText
            android:id="@+id/editPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="false"
            android:textAppearance="@style/TextStyleForTexts" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPriceEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="-8dp"
        android:focusableInTouchMode="false"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_calc_horizontal_margin"
        android:paddingRight="@dimen/activity_calc_horizontal_margin">

        <Space
            android:layout_width="110dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/text_empty_price"
            android:textAppearance="@style/TextStyleForTextsEmpty" />
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        style="@style/AppTheme.Divider.Horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/activity_calc_horizontal_margin"
        android:layout_marginRight="@dimen/activity_calc_horizontal_margin"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_calc_horizontal_margin"
        android:paddingRight="@dimen/activity_calc_horizontal_margin">

        <Spinner
            android:id="@+id/spinnerCons"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinnerSeason"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_calc_horizontal_margin"
        android:paddingRight="@dimen/activity_calc_horizontal_margin">

        <TextView
            android:id="@+id/textCons"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:labelFor="@+id/editCons"
            android:text="@string/text_consumption"
            android:textAppearance="@style/TextStyleForTexts" />

        <EditText
            android:id="@+id/editCons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="false"
            android:textAppearance="@style/TextStyleForTexts" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutConsEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:focusableInTouchMode="false"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_calc_horizontal_margin"
        android:paddingRight="@dimen/activity_calc_horizontal_margin">

        <Space
            android:layout_width="110dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/text_empty_cons"
            android:textAppearance="@style/TextStyleForTextsEmpty" />
    </LinearLayout>
</LinearLayout>