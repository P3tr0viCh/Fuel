<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_light">

    <include
        android:id="@+id/toolbar_dates"
        layout="@layout/toolbar_dates"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <View
        android:id="@+id/view_toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/toolbar_shadow"/>

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_below="@+id/toolbar_dates"/>

    <android.support.v7.widget.CardView
        style="@style/AppTheme.CardView"
        android:layout_below="@+id/toolbar_dates"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_view_corner_radius">

            <include
                android:id="@+id/fueling_recycler_view_header"
                layout="@layout/fueling_recycler_view_header"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

            <View
                android:id="@+id/fuelingListViewHeaderDivider"
                style="@style/AppTheme.Divider.Horizontal"
                android:layout_alignBottom="@+id/fueling_recycler_view_header"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/layout_total"
                android:layout_below="@+id/fueling_recycler_view_header"
                android:choiceMode="none"
                tools:listitem="@layout/fueling_list_item"/>

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/progress_wheel"
                android:layout_width="@dimen/progress_wheel_fueling_size"
                android:layout_height="@dimen/progress_wheel_fueling_size"
                android:layout_centerInParent="true"
                android:visibility="gone"
                wheel:matProg_barColor="@color/primary"
                wheel:matProg_progressIndeterminate="true"/>

            <TextView
                android:id="@+id/text_no_records"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/text_no_data"
                android:textAppearance="@style/AppTheme.TextAppearance.Medium.Secondary"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layout_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <View style="@style/AppTheme.Divider.Horizontal"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/text_average_caption"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/text_average_cons"
                        android:textAppearance="@style/AppTheme.TextAppearance.Text.Secondary"/>

                    <TextView
                        android:id="@+id/text_average"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/text_average_caption"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/AppTheme.TextAppearance.Text"
                        tools:text="@string/list_item_volume"/>

                    <TextView
                        android:id="@+id/text_cost_sum_caption"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="32dp"
                        android:layout_toRightOf="@+id/text_average"
                        android:gravity="center_vertical"
                        android:text="@string/text_sum_cost"
                        android:textAppearance="@style/AppTheme.TextAppearance.Text.Secondary"/>

                    <TextView
                        android:id="@+id/text_cost_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/text_cost_sum_caption"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/AppTheme.TextAppearance.Text"
                        tools:text="@string/list_item_cost"/>
                </RelativeLayout>
            </LinearLayout>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/fab_margin_bottom"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_plus_white"
                fab:fab_colorNormal="@color/primary"
                fab:fab_colorPressed="@color/primary_dark"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>