<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light">

    <include
        android:id="@+id/toolbarDates"
        layout="@layout/toolbar_dates"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height" />

    <View
        android:id="@+id/toolbarShadow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/toolbar_shadow" />

    <include
        android:id="@+id/toolbarHeader"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_below="@+id/toolbarDates" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarDates"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin_top"
        cardview:cardBackgroundColor="@color/window_background"
        cardview:cardCornerRadius="@dimen/card_view_corner_radius"
        cardview:cardElevation="@dimen/card_view_elevation">

        <RelativeLayout
            android:id="@+id/layoutMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/card_view_corner_radius">

            <include
                android:id="@+id/fuelingListViewHeader"
                layout="@layout/fueling_listview_header"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <View
                android:id="@+id/fuelingListViewHeaderDivider"
                style="@style/AppTheme.Divider.Horizontal"
                android:layout_alignBottom="@+id/fuelingListViewHeader" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerViewFueling"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/layoutTotal"
                android:layout_below="@+id/fuelingListViewHeader"
                android:choiceMode="none"
                tools:listitem="@layout/fueling_list_item" />

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/progressWheelFueling"
                android:layout_width="@dimen/progress_wheel_fueling_size"
                android:layout_height="@dimen/progress_wheel_fueling_size"
                android:layout_centerInParent="true"
                android:visibility="gone"
                wheel:matProg_barColor="@color/primary"
                wheel:matProg_progressIndeterminate="true" />

            <TextView
                android:id="@+id/tvNoRecords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/text_no_data"
                android:textAppearance="@style/AppTheme.TextAppearance.Medium.Secondary"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layoutTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <View style="@style/AppTheme.Divider.Horizontal" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp">

                    <TextView
                        android:id="@+id/tvAverageText"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="@string/text_average_cons"
                        android:textAppearance="@style/AppTheme.TextAppearance.Texts.Secondary" />

                    <TextView
                        android:id="@+id/tvAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tvAverageText"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/AppTheme.TextAppearance.Texts"
                        tools:text="@string/list_item_volume" />

                    <TextView
                        android:id="@+id/tvCostSumText"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="32dp"
                        android:layout_toRightOf="@+id/tvAverage"
                        android:gravity="center_vertical"
                        android:text="@string/text_sum_cost"
                        android:textAppearance="@style/AppTheme.TextAppearance.Texts.Secondary" />

                    <TextView
                        android:id="@+id/tvCostSum"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/tvCostSumText"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/AppTheme.TextAppearance.Texts"
                        tools:text="@string/list_item_cost" />
                </RelativeLayout>
            </LinearLayout>

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/fab_margin_bottom"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:src="@mipmap/ic_add_white_24dp"
                fab:fab_colorNormal="@color/primary"
                fab:fab_colorPressed="@color/primary_dark" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>