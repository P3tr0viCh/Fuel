<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.p3tr0vich.fuel.ActivityYandexMap"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbarYandexMap"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/webViewPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progressWheelYandexMap"
            android:layout_width="@dimen/progress_wheel_fueling_size"
            android:layout_height="@dimen/progress_wheel_fueling_size"
            android:layout_centerInParent="true"
            android:visibility="gone"
            wheel:matProg_barColor="@color/primary"
            wheel:matProg_progressIndeterminate="true" />
    </RelativeLayout>
</LinearLayout>
