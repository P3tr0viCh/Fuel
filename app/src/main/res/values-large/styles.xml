<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.DialogWhenLarge">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>

        <item name="android:windowCloseOnTouchOutside">false</item>

        <item name="windowFixedWidthMajor" tools:ignore="PrivateResource">
            @dimen/abc_dialog_fixed_width_major
        </item>
        <item name="windowFixedWidthMinor" tools:ignore="PrivateResource">
            @dimen/abc_dialog_fixed_width_minor
        </item>
        <item name="windowFixedHeightMajor" tools:ignore="PrivateResource">
            @dimen/abc_dialog_fixed_height_major
        </item>
        <item name="windowFixedHeightMinor" tools:ignore="PrivateResource">
            @dimen/abc_dialog_fixed_height_minor
        </item>
    </style>
</resources>