<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 xmlns:wheel="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_dates"
            layout="@layout/partial_toolbar_dates"/>

        <View
            android:id="@+id/view_toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/toolbar_shadow"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/total_panel"
            android:layout_below="@+id/toolbar_dates"
            android:choiceMode="none"
            tools:listitem="@layout/fueling_list_item"/>

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="@dimen/progress_wheel_fueling_size"
            android:layout_height="@dimen/progress_wheel_fueling_size"
            android:layout_centerInParent="true"
            android:visibility="gone"
            wheel:matProg_barColor="?attr/colorPrimary"
            wheel:matProg_progressIndeterminate="true"/>

        <TextView
            android:id="@+id/text_no_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text_no_data"
            android:textAppearance="@style/AppTheme.TextAppearance.Medium.Secondary"
            android:visibility="gone"/>

        <FrameLayout
            android:id="@+id/total_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <View style="@style/AppTheme.Divider.Horizontal"/>

            <include layout="@layout/partial_fueling_total"/>
        </FrameLayout>

        <include
            android:id="@+id/fab"
            style="@style/AppTheme.FloatingActionButton.NoAlignParentBottom"
            layout="@layout/partial_floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/total_panel"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>