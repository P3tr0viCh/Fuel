<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="AppTheme.Divider.Horizontal">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="AppTheme.Divider.Vertical">
        <item name="android:layout_width">1dp</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="Widget.AppCompat.PopupMenu"/>

    <style name="AppTheme.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="AppTheme.FloatingActionButton.NoAlignParentBottom">
        <item name="android:layout_alignParentBottom">false</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button"/>

    <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored"/>

    <style name="AppTheme.Spinner.Underlined" parent="Widget.AppCompat.Spinner.Underlined"/>

    <style name="AppTheme.DatePickerButton" parent="AppTheme.Spinner.Underlined">
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="AppTheme.TextAppearance.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.List" parent="AppTheme.TextAppearance.Body"/>

    <style name="AppTheme.TextAppearance.Text" parent="AppTheme.TextAppearance.Body"/>

    <style name="AppTheme.TextAppearance.Text.Secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="AppTheme.TextAppearance.Caption" parent="TextAppearance.AppCompat.Caption"/>

    <style name="AppTheme.TextAppearance.Display" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.Headline" parent="TextAppearance.AppCompat.Headline"/>

    <style name="AppTheme.TextAppearance.Subhead" parent="TextAppearance.AppCompat.Subhead"/>

    <style name="AppTheme.TextAppearance.Subhead.Secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="AppTheme.TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium"/>

    <style name="AppTheme.TextAppearance.Medium.Secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="AppTheme.TextAppearance.Small" parent="TextAppearance.AppCompat.Small"/>

    <style name="AppTheme.TextAppearance.ErrorValue" parent="AppTheme.TextAppearance.Small">
        <item name="android:textColor">?attr/textColorError</item>
    </style>

    <style name="AppTheme.TextAppearance.PreferenceCategory" parent="AppTheme.TextAppearance.Medium">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.DialogWindowTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.DialogTitle">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabIndicatorColor">@color/window_background</item>
        <item name="tabMinWidth">@dimen/tab_min_width</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.TableRow">
        <item name="android:paddingTop">@dimen/row_padding_top</item>
        <item name="android:paddingBottom">@dimen/row_padding_bottom</item>
    </style>

    <style name="AppTheme.TableRow.First">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="AppTheme.TableRow.Last">
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AppTheme.PreferenceThemeOverlay" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/fragment_preferences</item>
        <item name="preferenceScreenStyle">@style/AppTheme.Preference.PreferenceScreen</item>
        <item name="preferenceCategoryStyle">@style/AppTheme.Preference.Category</item>
        <item name="preferenceStyle">@style/AppTheme.Preference</item>
        <item name="switchPreferenceCompatStyle">@style/AppTheme.Preference.SwitchPreferenceCompat
        </item>
        <item name="dialogPreferenceStyle">@style/AppTheme.Preference.DialogPreference</item>
        <item name="editTextPreferenceStyle">
            @style/AppTheme.Preference.DialogPreference.EditTextPreference
        </item>
    </style>

    <style name="AppTheme.Preference" parent="Preference.Material">
        <item name="layout">@layout/apptheme_preference</item>
    </style>

    <style name="AppTheme.Preference.SwitchPreferenceCompat" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="layout">@layout/apptheme_preference</item>
    </style>

    <style name="AppTheme.Preference.Category" parent="Preference.Category.Material">
        <item name="layout">@layout/apptheme_preference_category</item>
    </style>

    <style name="AppTheme.Preference.PreferenceScreen" parent="Preference.PreferenceScreen.Material">
        <item name="layout">@layout/apptheme_preference</item>
    </style>

    <style name="AppTheme.Preference.DialogPreference.EditTextPreference" parent="Preference.DialogPreference.EditTextPreference.Material">
        <item name="layout">@layout/apptheme_preference</item>
    </style>

    <style name="AppTheme.Preference.DialogPreference" parent="Preference.DialogPreference.Material">
        <item name="layout">@layout/apptheme_preference</item>
    </style>

    <style name="AppTheme.Preference.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">10</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

    <style name="AppTheme.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorPrimary</item>
        <item name="height">?attr/actionBarSize</item>
    </style>

    <style name="AppTheme.DialogWhenLarge"/>
</resources>