<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listViewFueling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:drawSelectorOnTop="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="true"
        tools:listfooter="@layout/fueling_listview_footer"
        tools:listheader="@layout/fueling_listview_header"
        tools:listitem="@layout/fueling_listitem"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progressWheelFueling"
        android:layout_width="@dimen/progress_wheel_fueling_size"
        android:layout_height="@dimen/progress_wheel_fueling_size"
        android:layout_centerInParent="true"
        android:visibility="gone"
        wheel:matProg_barColor="@color/primary"
        wheel:matProg_progressIndeterminate="true"
        android:layout_above="@+id/layoutTotal"
        android:layout_alignTop="@+id/listViewFueling" />

    <View
        android:id="@+id/divider"
        style="@style/AppTheme.Divider.Horizontal"
        android:layout_above="@+id/layoutTotal" />

    <RelativeLayout
        android:id="@+id/layoutTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/tvSum"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/spMenu"
            android:clickable="false"
            android:gravity="center_vertical"
            android:text="@string/text_sum"
            android:textAppearance="@style/TextStyleForLists" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvSum"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/spMenu"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAppearance="@style/TextStyleForLists"
                tools:text="@string/list_item_cost" />

            <TextView
                android:id="@+id/tvVolume"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAppearance="@style/TextStyleForLists"
                tools:text="@string/list_item_volume" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAppearance="@style/TextStyleForLists" />
        </LinearLayout>

        <Space
            android:id="@+id/spMenu"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progressWheelTotal"
            android:layout_width="@dimen/progress_wheel_total_size_phone"
            android:layout_height="@dimen/progress_wheel_total_size_phone"
            android:layout_centerInParent="true"
            android:visibility="gone"
            wheel:matProg_barColor="@color/primary"
            wheel:matProg_progressIndeterminate="true" />

    </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="22dp"
        android:clickable="true"
        android:src="@drawable/ic_add_white_24dp"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorPressed="@color/primary_dark"
        android:layout_alignBottom="@+id/layoutTotal"
        android:layout_alignRight="@+id/layoutTotal" />
</RelativeLayout>