<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.p3tr0vich.fuel" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityFuelingRecordChange"
            android:parentActivityName=".ActivityMain" />
        <activity
            android:name=".ActivityCalc"
            android:label="@string/title_activity_calc"
            android:parentActivityName=".ActivityMain" />
        <activity
            android:name=".ActivityPreference"
            android:label="@string/title_activity_prefs" />
        <activity
            android:name=".ActivityBackup"
            android:label="@string/title_activity_backup"
            android:parentActivityName=".ActivityMain" />
        <activity
            android:name=".ActivityYandexMap"
            android:configChanges="screenSize|orientation"
            android:label="@string/title_activity_yandex_map"
            android:parentActivityName=".ActivityCalc" />
    </application>

</manifest>
