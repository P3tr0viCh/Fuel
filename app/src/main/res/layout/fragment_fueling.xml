<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:fab="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 xmlns:wheel="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbarDates"
            layout="@layout/toolbar_dates"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"/>

        <View
            android:id="@+id/toolbarShadow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/toolbar_shadow"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewFueling"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layoutTotal"
            android:layout_below="@+id/toolbarDates"
            android:choiceMode="none"
            tools:listitem="@layout/fueling_list_item"/>

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progressWheelFueling"
            android:layout_width="@dimen/progress_wheel_fueling_size"
            android:layout_height="@dimen/progress_wheel_fueling_size"
            android:layout_centerInParent="true"
            android:visibility="gone"
            wheel:matProg_barColor="@color/primary"
            wheel:matProg_progressIndeterminate="true"/>

        <TextView
            android:id="@+id/tvNoRecords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/text_no_data"
            android:textAppearance="@style/AppTheme.TextAppearance.Medium.Secondary"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/layoutTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <View style="@style/AppTheme.Divider.Horizontal"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/tvAverageText"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_average_cons"
                        android:textAppearance="@style/AppTheme.TextAppearance.Texts.Secondary"/>

                    <TextView
                        android:id="@+id/tvAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/AppTheme.TextAppearance.Texts"
                        tools:text="@string/list_item_volume"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top">

                    <TextView
                        android:id="@+id/tvCostSumText"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_sum_cost"
                        android:textAppearance="@style/AppTheme.TextAppearance.Texts.Secondary"/>

                    <TextView
                        android:id="@+id/tvCostSum"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:textAppearance="@style/AppTheme.TextAppearance.Texts"
                        tools:text="@string/list_item_cost"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fab_margin_bottom"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_plus_white"
        app:layout_behavior=".FloatingActionButtonBehavior"
        fab:behavior_marginBottom="@dimen/fab_margin_bottom"
        fab:behavior_minDistance="@dimen/fab_and_snackbar_min_distance"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorPressed="@color/primary_dark"/>
</android.support.design.widget.CoordinatorLayout>