<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progressWheelProgress"
        android:layout_width="@dimen/progress_wheel_fueling_size"
        android:layout_height="@dimen/progress_wheel_fueling_size"
        android:visibility="visible"
        wheel:matProg_barColor="@color/primary"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/textProgressMessage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:text=""
        android:textAppearance="@style/AppTheme.TextAppearance.Texts"
        tools:text="Progress message..." />
</LinearLayout>