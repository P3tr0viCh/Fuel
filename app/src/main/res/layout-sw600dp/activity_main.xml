<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/primary_light"
    android:orientation="vertical"
    tools:context="ru.p3tr0vich.fuel.ActivityCalc">

    <include
        android:id="@+id/toolbarMainDates"
        layout="@layout/toolbar_dates"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_marginTop="0dp" />

    <View
        android:id="@+id/toolbarShadow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/toolbar_shadow"
        android:layout_below="@+id/toolbarMain"
        android:visibility="visible" />

    <include
        android:id="@+id/toolbarMain"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drop_shadow"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@+id/toolbarMainDates"
        android:layout_marginBottom="@dimen/activity_vertical_margin">

        <fragment
            android:id="@+id/fragmentFueling"
            android:name="ru.p3tr0vich.fuel.FragmentFueling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:layout="@layout/fueling_listview" />
    </FrameLayout>
</RelativeLayout>