    android:layout_height="match_parent"
    tools:context=".ActivityBackup">

    <include
        android:id="@+id/toolbarBackup"
        layout="@layout/toolbar" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragmentBackup"
        android:name="ru.p3tr0vich.fuel.FragmentBackup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarBackup"
        tools:layout="@layout/fragment_backup" />

</RelativeLayout>
