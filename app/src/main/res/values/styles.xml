<resources>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="AppTheme.Divider.Horizontal" parent="AppTheme.Divider">
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="AppTheme.Divider.Vertical" parent="AppTheme.Divider">
        <item name="android:layout_width">1dp</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="@style/Widget.AppCompat.PopupMenu" />

    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button" />

    <style name="AppTheme.Button.Colored" parent="@style/Widget.AppCompat.Button.Colored" />

    <style name="AppTheme.DatePickerButton" parent="@style/Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="AppTheme.TextAppearance.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Lists" parent="@style/AppTheme.TextAppearance.Body" />

    <style name="AppTheme.TextAppearance.Texts" parent="@style/AppTheme.TextAppearance.Body" />

    <style name="AppTheme.TextAppearance.Caption" parent="@style/TextAppearance.AppCompat.Caption" />

    <style name="AppTheme.TextAppearance.Display" parent="@style/TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="AppTheme.TextAppearance.Medium" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextAppearance.Small" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextAppearance.ErrorValue" parent="@style/AppTheme.TextAppearance.Small">
        <item name="android:textColor">@color/edit_error</item>
    </style>

    <style name="AppTheme.TextAppearance.PreferenceCategory" parent="AppTheme.TextAppearance.Medium">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="AppTheme.TextAppearance.DialogWindowTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.DialogTitle">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:textAppearance">@style/AppTheme.TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/primary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/primary</item>
        <item name="tabIndicatorColor">@color/window_background</item>
        <item name="tabMinWidth">@dimen/tab_min_width</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.PreferenceThemeOverlay" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceScreenStyle">@style/AppTheme.Preference.PreferenceScreen</item>
        <item name="preferenceCategoryStyle">@style/AppTheme.Preference.Category</item>
        <item name="preferenceStyle">@style/AppTheme.Preference</item>
        <item name="switchPreferenceCompatStyle">@style/AppTheme.Preference.SwitchPreferenceCompat
        </item>
        <item name="dialogPreferenceStyle">@style/AppTheme.Preference.DialogPreference</item>
        <item name="editTextPreferenceStyle">
            @style/AppTheme.Preference.DialogPreference.EditTextPreference
        </item>
    </style>

    <style name="AppTheme.Preference" parent="Preference.Material">
        <item name="layout">@layout/apptheme_preference</item>
    </style>

    <style name="AppTheme.Preference.SwitchPreferenceCompat" parent="Preference.SwitchPreferenceCompat.Material">
        <item name="layout">@layout/apptheme_preference</item>
    </style>

    <style name="AppTheme.Preference.Category" parent="Preference.Category.Material">
        <item name="layout">@layout/apptheme_preference_category</item>
    </style>

    <style name="AppTheme.Preference.PreferenceScreen" parent="Preference.PreferenceScreen.Material">
        <item name="layout">@layout/apptheme_preference</item>
    </style>

    <style name="AppTheme.Preference.DialogPreference.EditTextPreference" parent="Preference.DialogPreference.EditTextPreference.Material">
        <item name="layout">@layout/apptheme_preference</item>
    </style>

    <style name="AppTheme.Preference.DialogPreference" parent="Preference.DialogPreference.Material">
        <item name="layout">@layout/apptheme_preference</item>
    </style>

    <style name="AppTheme.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/primary</item>
        <item name="height">@dimen/toolbar_height</item>
    </style>
</resources>
