<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listViewFueling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/divider"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:drawSelectorOnTop="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="true"
        tools:listfooter="@layout/fueling_listview_footer"
        tools:listheader="@layout/fueling_listview_header"
        tools:listitem="@layout/fueling_listitem" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progressWheelFueling"
        android:layout_width="@dimen/progress_wheel_fueling_size"
        android:layout_height="@dimen/progress_wheel_fueling_size"
        android:layout_above="@+id/layoutTotal"
        android:layout_alignTop="@+id/listViewFueling"
        android:layout_centerInParent="true"
        android:visibility="gone"
        wheel:matProg_barColor="@color/primary"
        wheel:matProg_progressIndeterminate="true" />

    <View
        android:id="@+id/divider"
        style="@style/AppTheme.Divider.Horizontal"
        android:layout_above="@+id/layoutTotal" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:wheel="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutTotal"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:clickable="false"
                android:gravity="center_vertical"
                android:text="@string/text_sum"
                android:textAppearance="@style/AppTheme.TextAppearance.Lists" />

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/AppTheme.TextAppearance.Lists"
                tools:text="@string/list_item_cost" />

            <TextView
                android:id="@+id/tvVolume"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/AppTheme.TextAppearance.Lists"
                tools:text="@string/list_item_volume" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/AppTheme.TextAppearance.Lists" />

            <Space
                android:id="@+id/spMenu"
                android:layout_width="48dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progressWheelTotal"
            android:layout_width="@dimen/progress_wheel_total_size_tablet"
            android:layout_height="@dimen/progress_wheel_total_size_tablet"
            android:layout_centerInParent="true"
            android:visibility="gone"
            wheel:matProg_barColor="@color/primary"
            wheel:matProg_progressIndeterminate="true" />

    </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layoutTotal"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignRight="@+id/layoutTotal"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:src="@drawable/ic_add_white_24dp"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorPressed="@color/primary_dark" />
</RelativeLayout>