<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnDate"
        style="@style/AppTheme.DatePickerButton"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:text=""
        android:textAppearance="@style/AppTheme.TextAppearance.Texts"
        android:textColor="@color/primary_text"
        tools:text="@string/list_item_date" />

    <View
        style="@style/AppTheme.Divider.Horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/textCost"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:labelFor="@+id/editCost"
            android:text="@string/text_cost"
            android:textAppearance="@style/AppTheme.TextAppearance.Texts" />

        <EditText
            android:id="@+id/editCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="false"
            android:textAppearance="@style/AppTheme.TextAppearance.Texts" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/textVolume"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:labelFor="@+id/editVolume"
            android:text="@string/text_volume"
            android:textAppearance="@style/AppTheme.TextAppearance.Texts" />

        <EditText
            android:id="@+id/editVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="numberDecimal"
            android:selectAllOnFocus="false"
            android:textAppearance="@style/AppTheme.TextAppearance.Texts" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/textTotal"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:labelFor="@+id/editTotal"
            android:text="@string/text_total"
            android:textAppearance="@style/AppTheme.TextAppearance.Texts" />

        <EditText
            android:id="@+id/editTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="number"
            android:selectAllOnFocus="false"
            android:textAppearance="@style/AppTheme.TextAppearance.Texts" />
    </LinearLayout>
</LinearLayout>
